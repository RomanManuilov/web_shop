
block content
    div.addGoods_container
        form.addGoods_form(action="/add" method="POST")
            h2.addGoods_form__name Добавить товар в базу
            p.addGoods_form__description Название товара
            input.addGoods_form__input(type="text" name="name")
            p.addGoods_form__description Цена товара
            input.addGoods_form__input(type="text" name="price")
            p.addGoods_form__description Категория товара
            input.addGoods_form__input(type="text" name="categories")
            p.addGoods_form__description Описание товара
            input.addGoods_form__input(type="text" name="description")
            p.addGoods_form__description Выберите картку для товара
            input.addGoods_form__input(type="file" name="src")
            br
            input.addGoods_form__btn(type="submit", value="Добавить")
        div.statGoods_container
            h2.statGoods_container__name Статистика по базе данных:
            if (!goods)
                p.statGoods_container__quantity Общее количество товара в базе: 0;
            else
                p.statGoods_container__quantity Общее количество товара в базе: #{goods.length}
                -jacket = 0
                -shorts = 0
                -clock = 0
                -shoes = 0
                for item in goods
                    if item.categories === 'Куртки'
                        -jacket += 1
                    else if item.categories === 'Шорты'
                        -shorts += 1
                    else if item.categories === 'Часы'
                        -clock += 1
                    else if item.categories === 'Обувь'
                        -shoes += 1
                p.statGoods_container__quantity Общее количество Курток: #{jacket}
                p.statGoods_container__quantity Общее количество Шорт: #{shorts}
                p.statGoods_container__quantity Общее количество Часов: #{clock}
                p.statGoods_container__quantity Общее количество Обуви: #{shoes}

